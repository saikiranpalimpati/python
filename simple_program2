dividend = int(input("enter your dividend (numerator)"))
divisor = int(input("enter your divisor (denominator)"))
remainder = int(dividend%divisor)

if(remainder%2==0):
  if(dividend %4 ==0):
    print(divisor,"divides",dividend,"evenly and the", dividend,"is also a multiple of 4")
  else:    
   print(divisor,"divides",dividend,"evenly")
else:
  print(divisor,"does not divide",dividend,"evenly")
